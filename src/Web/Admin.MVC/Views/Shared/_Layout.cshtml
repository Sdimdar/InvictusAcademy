<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Admin.MVC</title>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <script src="https://kit.fontawesome.com/1c978c9231.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Admin.MVC.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid container">
            <a class="navbar-brand" asp-area="" asp-controller="" asp-action="">Admin.MVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                @if (User.IsInRole("admin"))
                {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admins" asp-action="CreateAdmin">Создание админа</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admins" asp-action="EditProfile">Управление админами</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="GetAllRegisteredUsers">Список пользователей</a>
                        </li>
                    </ul>
                }

            </div>
            <div class="head-cell" style="text-align: end">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Accounts" asp-action="LogOff">Выход </a>
                }
                else
                {
                    <a asp-controller="Accounts" asp-action="Login">Вход </a>
                }

                <a style="margin-left:15px" asp-controller="" asp-action="" asp-route-userName="@User.Identity.Name">
                    <i class="fa-regular fa-user"></i>
                </a>
            </div>
        </div>
    </nav>
</header>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>


<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>